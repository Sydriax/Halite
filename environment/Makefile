CXXFLAGS += -std=c++11 -pthread -I ./
SOURCES=$(shell find . -name "*.cpp")
OBJECTS=$(SOURCES:%.cpp=%.o)
TARGET=halite

.PHONY: all
all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(LINK.cpp) $^ $(LOADLIBES) $(LDLIBS) -o $@

.PHONY: clean
clean:
	rm -f $(TARGET) $(OBJECTS)

.PHONY: install
install:
	mkdir -p $(HOME)/.halite
	install -m 0755 halite $(HOME)/.halite
	echo 'export PATH=$(HOME)/.halite:$$PATH' >> $(HOME)/.profile
	. $(HOME)/.profile
